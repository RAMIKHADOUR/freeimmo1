{% extends 'base.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 200px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                
                <span class="fs-4">FreeImmo</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="{{path('app_login')}}" class="nav-link active" aria-current="page">
                       
                        Accueil
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                       
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                      
                  Annonces
                    </a>
                </li>
                
                <li>
                    <a href="#" class="nav-link text-white">
                    Dossiers Clients
                    </a>
                </li>
            </ul>
            <hr>
            
        </div>

<div class="d-flex flex-column flex-shrink-0 p-3" style="width: 280px;">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category</th>
            <th scope="col">Type</th>
            <th scope="col">Surface</th>
            <th scope="col">Status</th>
            <th scope="col">Price</th>
            <th scope="col">Adresse</th>
            <th scope="col">City</th>
            <th scope="col">Zipecode</th>
            <th scope="col">Picture</th>
            <th scope="col">CreatedAt</th>
            <th scope="col">actions</th>
    
        </tr>
    </thead>
    <tbody>
    {% for property in properties %}
    <tr class="table-primary">
        <th scope="row">{{ property.id }}</th>
        <td>{{ property.category }}</td>
        <td>{{ property.type }}</td>
        <td>{{ property.surface }}</td>
        <td>{{ property.status }}</td>
        <td>{{ property.price }}</td>
        <td>{{ property.adresse }}</td>
        <td>{{ property.city }}</td>
        <td>{{ property.zipecode }}</td>
        <td>{{ property.picture }}</td>
        <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        <td>
            <a class="btn btn-primary m-3" href="{{ path('app_property_show', {'id': property.id}) }}" role="button">Show</a>
            <a class="btn btn-primary m-3" href="{{ path('app_property_edit', {'id': property.id}) }}" role="button">Edit</a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="12">Aucun annonce registr√©</td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
</div>

{% endblock %}
